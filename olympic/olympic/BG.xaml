<Window x:Class="olympic.BG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:olympic"
        mc:Ignorable="d"
        Title="BG" Height="300" Width="300">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="whiteButton" Margin="10" Grid.Column="0" Grid.Row="0" Content="White" Background="White" Click="whiteButton_Click" />
        <Button x:Name="blackButton" Margin="10" Grid.Column="1" Grid.Row="0" Content="Black" Background="Black" Foreground="white" Click="blackButton_Click"/>
        <Button x:Name="pinkButton" Margin="10" Grid.Column="0" Grid.Row="1" Content="Pink" Background="pink" Click="pinkButton_Click"/>
        <Button x:Name="lbButton" Margin="10" Grid.Column="1" Grid.Row="1" Content="Light blue" Background="LightBlue" Click="lbButton_Click"/>
    </Grid>
</Window>
